{
  "name": "dobon-uno",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter server dev & pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "dev:client": "pnpm --filter client dev",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @dobon-uno/shared build",
    "test": "pnpm -r test",
    "check": "biome check .",
    "fix": "biome check --write .",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "25.0.9",
    "husky": "9.1.7",
    "typescript": "5.9.3"
  }
}
